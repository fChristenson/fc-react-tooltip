{
  "extends": "eslint:recommended",
  "plugins": [
    "react"
  ],
  "env": {
    "node": true,
    "mocha": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "indent": ["error", 2],
    "semi": ["error"],
    "space-in-parens": ["error"],
    "no-mixed-spaces-and-tabs": ["error"],
    "space-before-function-paren": ["error", "never"],
    "no-console": 0,
    "quotes": ["error", "single"]
  }
}